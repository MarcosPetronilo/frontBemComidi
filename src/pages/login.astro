---
const title = 'BemComido - Login';
---
<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="min-h-screen flex items-center justify-center">
    <main class="w-full max-w-md px-6">
      <!-- Logo / Title -->
      <div class="text-center mb-6">
        <h1 class="font-logo text-4xl">
          <span class="text-brandOrange font-semibold">Bem</span>
          <span class="text-brandRed font-extrabold">Comido</span>
          <span aria-hidden="true" class="inline-block ml-1">üçµ</span>
        </h1>
      </div>

      <!-- Form Card -->
      <div class="bg-[#f9e3ac] rounded-md p-6 shadow-md ring-1 ring-black/10">
        <form id="loginForm" class="space-y-3">
          <label class="block">
            <span class="text-brandBrown text-sm font-semibold">Usu√°rio:</span>
            <input type="text" name="username" required class="mt-1 block w-full rounded-md border border-black/40 focus:border-brandRed focus:ring-brandRed shadow-sm" />
          </label>

          <label class="block">
            <span class="text-brandBrown text-sm font-semibold">Senha:</span>
            <input type="password" name="password" required class="mt-1 block w-full rounded-md border border-black/40 focus:border-brandRed focus:ring-brandRed shadow-sm" />
          </label>

          <div class="flex items-center justify-between text-sm">
            <a href="#" class="text-brandRed underline">Esqueci a senha</a>
          </div>

          <!-- Big red arrow button -->
          <div class="flex justify-center pt-2">
            <button type="submit" class="h-12 w-12 rounded-full bg-brandRed text-white grid place-items-center text-2xl shadow-button active:translate-y-[2px]" aria-label="Entrar">
              ‚ûú
            </button>
          </div>
          <p id="loginMsg" class="mt-2 text-center text-sm"></p>
        </form>
      </div>

      <!-- Divider and CTA -->
      <div class="mt-5">
        <div class="flex items-center gap-3 text-brandBrown">
          <span class="flex-1 border-t border-black/50"></span>
          <span>OU</span>
          <span class="flex-1 border-t border-black/50"></span>
        </div>

        <div class="mt-3">
          <a href="/cadastro" class="block text-center bg-brandRed text-white py-2 rounded-md shadow-button active:translate-y-[2px]">Cadastre-se</a>
        </div>
      </div>
    </main>
  </body>
 </html>
<script>
  const form = document.getElementById('loginForm');
  const msg = document.getElementById('loginMsg');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const { username, password } = Object.fromEntries(new FormData(form).entries());

    if (!username || !password) {
      msg.textContent = 'Informe usu√°rio e senha.';
      msg.className = 'mt-2 text-center text-sm text-brandRed';
      return;
    }

    try {
      msg.textContent = 'Entrando...';
      msg.className = 'mt-2 text-center text-sm text-brandBrown';

      const res = await fetch('http://localhost:8080/auth/login', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ username, password })
      });

      const body = await res.json().catch(() => ({}));
      if (!res.ok) {
        throw new Error(body.message || 'Falha na autentica√ß√£o');
      }

      // Optionally store token
      if (body.token) {
        localStorage.setItem('authToken', body.token);
      }

      msg.textContent = 'Login realizado!';
      msg.className = 'mt-2 text-center text-sm text-green-700';
      setTimeout(() => { window.location.href = '/app'; }, 600);
    } catch (err) {
      msg.textContent = String(err.message || err);
      msg.className = 'mt-2 text-center text-sm text-brandRed';
    }
  });
</script>