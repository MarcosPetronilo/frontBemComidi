<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>BemComido - Buscar Usu√°rio</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="min-h-screen">
    <header class="w-full bg-brandRed text-white shadow-md">
      <div class="max-w-6xl mx-auto px-4 py-3 flex items-center gap-3">
        <a href="/top-receitas" class="px-3 py-1 bg-[#b21f1f] rounded shadow-button">Top Receitas</a>
        <button data-favoritos class="px-3 py-1 bg-[#b21f1f] rounded shadow-button">Favoritos</button>
        <a href="/app" class="px-3 py-1 bg-[#b21f1f] rounded shadow-button">Buscar Receitas</a>
        <span class="px-3 py-1 bg-white text-[#b21f1f] rounded shadow-button">Buscar Usu√°rio</span>
        <div class="mx-auto flex items-center gap-2 text-2xl font-logo">
          <span>BC</span>
          <span aria-hidden="true">‚òï</span>
        </div>
        <a href="/enviar-receita" class="px-3 py-1 bg-[#b21f1f] rounded shadow-button">Enviar Receita</a>
        <div class="flex items-center gap-2 ml-2 relative">
          <span>Bem vindo, Usu√°rio</span>
          <span class="inline-block h-7 w-7 rounded-full bg-white text-brandRed grid place-items-center">üë§</span>
          <button id="auth-menu-btn" class="ml-2 px-2">‚ãÆ</button>
          <div id="auth-menu" class="hidden absolute right-0 top-full mt-2 z-50 bg-[#f9e3ac] text-brandBrown rounded-md shadow-md ring-1 ring-black/10 w-48">
            <a href="/usuario/editar" class="block px-4 py-2 hover:bg-black/10">Editar Informa√ß√µes</a>
            <a href="/usuario/receitas" class="block px-4 py-2 hover:bg-black/10">Minhas Receitas</a>
            <button id="sair-btn" class="w-full text-left px-4 py-2 hover:bg-black/10 text-brandRed">Sair</button>
          </div>
        </div>
      </div>
    </header>

    <main class="max-w-6xl mx-auto px-4 py-8">
      <h1 class="text-3xl text-brandBrown mb-4">Buscar Usu√°rio</h1>
      <section class="mb-6 bg-[#fff7e6] rounded-md p-4 shadow-md ring-1 ring-black/10">
        <div class="flex gap-2">
          <input id="q" type="text" placeholder="Digite o nome do usu√°rio" class="flex-1 input rounded-md border-black/40 focus:border-brandRed focus:ring-1 focus:ring-brandRed" />
          <button id="buscar" class="px-3 py-2 bg-brandRed text-white rounded shadow-button">Buscar</button>
        </div>
        <p id="statusBusca" class="mt-2 text-sm text-brandMuted"></p>
      </section>

      <section id="result" class="space-y-2"></section>
    </main>

    

    <script>
      const usuarios = [
        { id: 1, nome: 'Marcos Petronilo', email: 'marcos@example.com' },
        { id: 2, nome: 'Ana Souza', email: 'ana@example.com' },
        { id: 3, nome: 'Jo√£o Silva', email: 'joao@example.com' },
        { id: 4, nome: 'Maria Lima', email: 'maria@example.com' },
        { id: 5, nome: 'Pedro Santos', email: 'pedro@example.com' },
      ];

      const q = document.getElementById('q');
      const btn = document.getElementById('buscar');
      const ul = document.getElementById('result');
      const status = document.getElementById('statusBusca');

      function render(list) {
        ul.innerHTML = '';
        status.textContent = list.length ? `${list.length} usu√°rios encontrados` : 'Nenhum usu√°rio encontrado';
        if (!list.length) return;
        for (const u of list) {
          const li = document.createElement('li');
          li.className = 'bg-[#fff7e6] rounded-md p-4 shadow-md ring-1 ring-black/10';
          li.innerHTML = `<div class="font-semibold">${u.nome}</div><div class="text-sm">${u.email}</div>`;
          ul.appendChild(li);
        }
      }

      function buscar() {
        const term = q.value.trim().toLowerCase();
        const r = usuarios.filter(u => u.nome.toLowerCase().includes(term));
        render(r);
      }

      btn.addEventListener('click', buscar);
      q.addEventListener('keydown', (e) => { if (e.key === 'Enter') buscar(); });

      // auth menu
      const menuBtn = document.getElementById('auth-menu-btn');
      const menu = document.getElementById('auth-menu');
      menuBtn?.addEventListener('click', () => menu.classList.toggle('hidden'));
      document.addEventListener('click', (e) => {
        if (!menuBtn.contains(e.target) && !menu.contains(e.target)) menu.classList.add('hidden');
      });

      // favoritos requires auth
      const favBtn = document.querySelector('[data-favoritos]');
      favBtn?.addEventListener('click', () => {
        const token = localStorage.getItem('authToken');
        if (token) {
          window.location.href = '/favoritos';
        } else {
          window.location.href = '/login';
        }
      });
    </script>
  </body>
</html>
